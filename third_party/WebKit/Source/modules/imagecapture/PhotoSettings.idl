// https://www.w3.org/TR/image-capture/#PhotoSettings

[
    RuntimeEnabled=ImageCapture
] dictionary PhotoSettings {
    MeteringMode whiteBalanceMode;
    unsigned long colorTemperature;
    MeteringMode exposureMode;
    unsigned long exposureCompensation;
    unsigned long iso;
    boolean redEyeReduction;
    MeteringMode focusMode;
    sequence<Point2D> pointsOfInterest;

    // TODO(mcasas): Implement |brightness|, |contrast|, |saturation| and
    // |sharpness|, https://crbug.com/650676.
    unsigned long zoom;
    unsigned long imageHeight;
    unsigned long imageWidth;
    FillLightMode fillLightMode;
};
